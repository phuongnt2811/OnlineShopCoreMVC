@model IEnumerable<Product>

@{
    var totoalPage = ViewBag.totalPage;
}
<form asp-controller="Products" asp-action="Index" class="d-flex" method="get">
    <input class="form-control me-sm-2" name="table_search" value="@ViewBag.table_search" type="text" placeholder="Search">
    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
</form>
@Html.ActionLink("Create New", "Create")
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">selldate</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var Item in Model)
        {
            <tr>
                <th scope="row">@Item.product_id</th>
                <td>
                    @Item.product_name
                </td>
                <td>
                    @Item.product_price
                </td>
                <td>
                    @Item.product_description
                </td>
                <td>
                    @Item.product_quantity
                </td>
                <td>
                    @Item.product_image
                </td>

                <td>
                    @Item.product_selldate
                </td>
                <td>
                    @Item.product_backlink
                </td>
                <td>
                    <i class="bi bi-pencil-square"><a></a></i>
                    <i class="bi bi-trash3"><a></a></i>
                </td>
            </tr>

        }

    </tbody>
</table>
@{
    <div>
        <ul class="pagination">
            @for (var pa = 1; pa <= totoalPage; pa++)
            {
                <li class="page-item">
                    <a asp-action="Index" asp-controller="Products" asp-route-page="@pa" class="page-link">@pa</a>
                </li>
            }
        </ul>
    </div>

}
