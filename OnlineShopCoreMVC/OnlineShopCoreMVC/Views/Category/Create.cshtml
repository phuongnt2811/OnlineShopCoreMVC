@model Category
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-controller="Category" asp-action="Create" method="post">

    <div class="form-group row">
        <label asp-for="category_name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="category_name" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="category_description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
            <input asp-for="category_description" class="form-control" placeholder="Name">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
